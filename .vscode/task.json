{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "task g++",  
			"type": "shell",
			"command": "g++",
			"args": [   
				"-g",    
				"${file}",
				"-o", 
				"${fileDirname}\\${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true 
			}
			
		}
	]
}
